{
  "prettier.enable": false,
  "editor.formatOnSave": false,
  "editor.codeActionsOnSave": {
    "source.fixAll.eslint": true
  },
  "eslint.format.enable": true,
  "css.lint.unknownAtRules": "ignore",
  "editor.wordWrap": "on",

  "errorLens.gutterIconsEnabled": true,

  "eslint.validate": [
    "javascript",
    "javascriptreact",
    "typescript",
    "typescriptreact",
    "vue",
    "html",
    "markdown",
    "mdx",
    "yaml"
  ]
}
